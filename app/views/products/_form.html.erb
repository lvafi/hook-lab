<%= form_with model: @product, local: true do |f| %>
  <% if @product.errors.any? %>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
// 
  <div>
    <%= f.collection_check_boxes :tag_ids, Tag.order(name: :asc), :id, :name do |b| %>
      <div class="tag-wrapper">
          <%= b.check_box %>
          <%= b.text.humanize %>
      </div>
    <% end %>
    </div>
    // 
  <%= f.submit %>
<% end %>